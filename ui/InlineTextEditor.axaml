<UserControl
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  x:Class="WallAligner.InlineTextEditor"
  Background="Transparent"
  Width="420"
  IsHitTestVisible="True"
  ClipToBounds="False"
>
  <Border CornerRadius="12" BorderBrush="#444" BorderThickness="1" Background="#EE1a1a1a" ClipToBounds="True">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>

      <Border Grid.Row="0" Background="#252525" CornerRadius="12,12,0,0" Padding="12,8" x:Name="titlebar" Cursor="Hand">
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
          </Grid.ColumnDefinitions>
          <TextBlock Grid.Column="0" Text="Text Editor" Foreground="#ddd" FontSize="13" FontWeight="SemiBold" VerticalAlignment="Center"/>
          <Button Grid.Column="1" x:Name="closebtn" Content="Ã—" Width="26" Height="26" Background="#333" BorderThickness="0" Foreground="#aaa" FontSize="16" Padding="0" VerticalAlignment="Center" CornerRadius="6" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        </Grid>
      </Border>

      <StackPanel Grid.Row="1" Spacing="10" Margin="14,12,14,14">
        <StackPanel Spacing="4">
          <TextBlock Text="Text:" Foreground="#999" FontSize="10" FontWeight="SemiBold"/>
          <TextBox x:Name="textinput" Watermark="Type text here..." Background="#222" BorderBrush="#3a3a3a" Foreground="#eee" FontSize="14" Padding="10,8" AcceptsReturn="False" CornerRadius="6"/>
        </StackPanel>

        <StackPanel Spacing="4">
          <TextBlock Text="Furniture:" Foreground="#999" FontSize="10" FontWeight="SemiBold"/>
          <AutoCompleteBox x:Name="furniinput" Background="#222" BorderBrush="#3a3a3a" Foreground="#eee" FontSize="11" Padding="8,6" Watermark="Select furniture type..." CornerRadius="6"/>
        </StackPanel>

        <StackPanel Spacing="4">
          <TextBlock Text="Font:" Foreground="#999" FontSize="10" FontWeight="SemiBold"/>
          <TextBox x:Name="fontsearch" Watermark="Search fonts..." Background="#222" BorderBrush="#3a3a3a" Foreground="#eee" FontSize="11" Padding="8,6" CornerRadius="6"/>
          <Border Background="#1a1a1a" BorderBrush="#333" BorderThickness="1" CornerRadius="6" MaxHeight="120">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
              <ListBox x:Name="fontlist" Background="Transparent" BorderThickness="0" Padding="2">
                <ListBox.Styles>
                  <Style Selector="ListBoxItem">
                    <Setter Property="Padding" Value="8,4"/>
                    <Setter Property="CornerRadius" Value="4"/>
                    <Setter Property="Margin" Value="2"/>
                  </Style>
                  <Style Selector="ListBoxItem:pointerover">
                    <Setter Property="Background" Value="#333"/>
                  </Style>
                  <Style Selector="ListBoxItem:selected">
                    <Setter Property="Background" Value="#2a5a3a"/>
                  </Style>
                </ListBox.Styles>
              </ListBox>
            </ScrollViewer>
          </Border>
        </StackPanel>

        <TextBlock x:Name="itemcountlabel" Text="Items: 0" Foreground="#666" FontSize="10" HorizontalAlignment="Left"/>
      </StackPanel>
    </Grid>
  </Border>
</UserControl>
